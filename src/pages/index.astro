---
import { Image } from 'astro:assets';

import BaseLayout from '../layouts/BaseLayout.astro';

import Card from '../components/card.astro';
import CardGrid from '../components/cardGrid.astro';
import '../styles/index.scss';

import ContentImage1 from '../assets/images/Mockups/FelineConsultingMockup2.png';

---

<BaseLayout pageTitle="Home" pageType="index">
	<section class="hero fade-in fade-in-up">
		<div class="hero-bg"></div>
		<div class="glass-card glass-border" aria-label="Intro card">
			<span class="glass-border" aria-hidden="true"></span>
			<span class="glass-noise" aria-hidden="true"></span>
			<span class="glass-glare" aria-hidden="true"></span>

			<h1>We shape what’s next<span class="highlight">.</span></h1>
			<p>Studio Fraktal is een digitaal design- en webcollectief. We bouwen merken, websites en experiences die klaar zijn voor morgen.</p>

			<div class="cta">
			<a class="primary-button" href="/contact">Plan een kennismaking</a>
			<a class="primary-button" href="/werk">Bekijk ons werk</a>
			</div>
		</div>
	</section>
	<!-- <section class="content">
		<p>We build websites that don’t just look great — they perform.
			We bring together both the technical and creative sides of web development. Our focus is on clean, modern sites that are fast, functional, and built to help your business grow.</p>
		<Image src={ContentImage1} alt="A website mockup image." class="contentImage"/>
			
	</section> -->
	<section class="services">
		<div class="services-intro fade-in fade-in-up">
			<h2>Our Services</h2>
			<p>We offer a range of services to meet your needs. Explore our features below.</p>
		</div>
		<div class="services-grid fade-in fade-in-up">
			<div class="service-item glass service1 fade-in fade-in-up">
				<h2 class="service-title">Creative</h2>
				<ul class="service-list">
					<li>Branding</li>
					<li>UI/UX Design</li>
					<li>Graphic Design</li>
				</ul>
			</div>
			<div class="service-item glass service2 fade-in fade-in-up">
				<h2 class="service-title">Marketing & Advertising</h2>
				<ul class="service-list">
					<li>Social Media Management</li>
					<li>Google Ads</li>
					<li>Conversion Optimization</li>
				</ul>
			</div>
			<div class="service-item glass service3 fade-in fade-in-up">
				<h2 class="service-title">development</h2>
				<ul class="service-list">
					<li>Website Development</li>
					<li>Mobile Design & Development</li>
					<li>Content Management Systems</li>
				</ul>
			</div>
			<div class="service-item glass service4 fade-in fade-in-up">
				<h2 class="service-title">Branding & Integration</h2>
				<ul class="service-list">
					<li>Brand Strategy</li>
					<li>Logo Design</li>
					<li>Brand Guidelines</li>
				</ul>
			</div>
		</div>			
	</section>
	<CardGrid title="Features" text="Explore the features of our product below.">
		<Card 
			imageSrc="https://placehold.co/200x200" 
			altText="Feature One" 
			title="Feature One" 
			text="Details about feature one." 
			ctaText="Learn More" 
			ctaLink="/feature-one"
		/>
		<Card 
			imageSrc="https://placehold.co/200x200" 
			altText="Feature One" 
			title="Feature One" 
			text="Details about feature one." 
			ctaText="Learn More" 
			ctaLink="/feature-one"
		/>
		<Card 
			imageSrc="https://placehold.co/200x200" 
			altText="Feature One" 
			title="Feature One" 
			text="Details about feature one." 
			ctaText="Learn More" 
			ctaLink="/feature-one"
		/>
