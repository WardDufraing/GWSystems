---
import BaseLayout from "../layouts/BaseLayout.astro";
import { company } from "../data/company";
---

<BaseLayout>
  <Fragment slot="head">
    <title>Contact | {company.name}</title>
    <meta
      name="description"
      content={`Contacteer ${company.name} voor elektriciteit, domotica, laadpalen en thuisbatterijen. Snelle reactie en duidelijke offerte.`}
    />
  </Fragment>

  <!-- Hero -->
  <section class="contact-hero section section--dark">
    <div class="container contact-hero__inner">
      <h1 class="contact-hero__title">Contact</h1>
      <p class="contact-hero__subtitle">
        Heb je een vraag of wil je een offerte aanvragen? Laat een bericht achter en we nemen snel contact op.
      </p>
    </div>
  </section>

  <!-- Contact -->
  <section class="contact section section--dark sep sep--top sep--bottom">
    <div class="container contact__inner">
      <div class="contact__grid">
        <!-- Info -->
        <aside class="contact__info">
          <h2 class="contact__heading">Gegevens</h2>

          <ul class="contact__list">
            <li>
              <span>Telefoon</span>
              <a href={`tel:${company.contact.phoneHref}`}>
                {company.contact.phoneDisplay}
              </a>
            </li>

            <li>
              <span>E-mail</span>
              <a href={`mailto:${company.contact.email}`}>
                {company.contact.email}
              </a>
            </li>

            <li>
              <span>Regio</span>
              <p>{company.serviceArea}</p>
            </li>

            <li>
              <span>Adres</span>
              <p>
                {company.address.street}<br />
                {company.address.zip} {company.address.city}
              </p>
            </li>
          </ul>

          <div class="contact__cta">
            <a class="btn btn--brand" href={`tel:${company.contact.phoneHref}`}>
              Bel ons
            </a>
            <a class="btn btn--outline" href={`mailto:${company.contact.email}`}>
              Mail ons
            </a>
          </div>
        </aside>

        <!-- Form -->
        <div class="contact__form">
          <h2 class="contact__heading">Stuur een bericht</h2>

          <form
            name="contact"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
          >
            <input type="hidden" name="form-name" value="contact" />
            <input type="hidden" name="bot-field" />

            <div class="form-row">
              <label for="name">Naam</label>
              <input id="name" name="name" type="text" required />
            </div>

            <div class="form-row">
              <label for="email">E-mail</label>
              <input id="email" name="email" type="email" required />
            </div>

            <div class="form-row">
              <label for="phone">Telefoon (optioneel)</label>
              <input id="phone" name="phone" type="tel" />
            </div>

            <div class="form-row">
              <label for="service">Waar gaat het over?</label>
              <select id="service" name="service">
                <option value="">Kies een dienst</option>
                {company.services.map((s) => (
                  <option value={s.label}>{s.label}</option>
                ))}
              </select>
            </div>

            <div class="form-row">
              <label for="message">Bericht</label>
              <textarea id="message" name="message" rows="6" required></textarea>
            </div>

            <button class="btn btn--brand btn--lg" type="submit">
              Verzenden
            </button>

            <p class="form-note">
              Door dit formulier te verzenden ga je akkoord dat we je gegevens gebruiken om je te contacteren.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
