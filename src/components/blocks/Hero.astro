---
import { company } from "../../data/company";
---

<section class="hero section--dark">
  <div class="container hero__inner">
    <div class="hero__card">
      <p class="hero__eyebrow">{company.serviceArea}</p>

      <h1 class="hero__title">
        Betrouwbare elektricien voor
        <span class="hero__highlight"> slimme & duurzame </span>
        installaties
      </h1>

      <p class="hero__subtitle">
        {company.services.map((s) => s.label).join(" • ")} — vakkundig geplaatst, netjes afgewerkt en
        transparant geprijsd.
      </p>

      <div class="hero__actions">
        <a class="btn btn--brand btn--lg" href={company.cta.primary.href}>
          {company.cta.primary.label}
        </a>
        <a class="btn btn--outline btn--lg" href={company.cta.secondary.href}>
          {company.cta.secondary.label}
        </a>
      </div>
    </div>
  </div>
</section>
