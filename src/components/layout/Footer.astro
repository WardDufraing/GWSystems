---
import { Image } from "astro:assets";
import logo from '../../assets/images/logoFull.png';

import { company } from "../../data/company";
import { navigation } from "../../data/navigation";

const year = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container footer__inner">
    <!-- Brand -->
    <div class="footer__brand">
      <a class="footer__logo" href="/" aria-label="Ga naar de startpagina">
        <Image src={logo} alt="logo"/>
    </a>

      <p class="footer__tagline">{company.tagline}</p>
      <p class="footer__service-area">{company.serviceArea}</p>
    </div>

    <!-- Links -->
    <nav class="footer__nav" aria-label="Footer navigatie">
      <h2 class="footer__title">Pagina’s</h2>
      <ul class="footer__list">
        {navigation.pages.map((l) => (
          <li class="footer__item">
            <a class="footer__link" href={l.href}>{l.label}</a>
          </li>
        ))}
      </ul>
    </nav>

    <!-- Contact -->
    <div class="footer__contact">
      <h2 class="footer__title">Contact</h2>

      <ul class="footer__list">
        <li class="footer__item">
          <a class="footer__link" href={`tel:${company.contact.phoneHref}`}>
            {company.contact.phoneDisplay}
          </a>
        </li>
        <li class="footer__item">
          <a class="footer__link" href={`mailto:${company.contact.email}`}>
            {company.contact.email}
          </a>
        </li>
        <li class="footer__item">
          <span class="footer__text">{company.address.street}, {company.address.zip} {company.address.city}</span>
        </li>
        <li class="footer__item">
          <span class="footer__text">BTW: {company.vat}</span>
        </li>
      </ul>

      <a class="footer__cta" href={company.cta.primary.href}>
        {company.cta.primary.label}
      </a>
    </div>
  </div>

  <div class="footer__bottom">
    <div class="container footer__bottom-inner">
      <p class="footer__copyright">
        © {year} {company.name}. Alle rechten voorbehouden.
      </p>

      <div class="footer__legal" aria-label="Juridisch">
        {navigation.footer.map((item, i) => (
          <>
            {item.href === "#cookie-instellingen" ? (
              <button type="button" class="footer__link" onclick="window.gwOpenCookieSettings?.()">
                {item.label}
              </button>
            ) : (
              <a href={item.href} class="footer__link">{item.label}</a>
            )}
            {i < navigation.footer.length - 1 && <span class="footer__dot" aria-hidden="true">•</span>}
          </>
        ))}
      </div>
    </div>
  </div>
</footer>
