---
import "../styles/main.scss";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import CookieBanner from "../components/layout/CookieBanner.astro";

import { analytics } from "../data/company"; // adjust path if needed
const GA_ID = analytics.ga4MeasurementId;
const ADS_ID = analytics.googleAdsId;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" href="/favicons/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" href="/favicons/favicon-32x32.png" />
    <link rel="icon" type="image/png" href="/favicons/favicon-16x16.png" />

    <link rel="apple-touch-icon" href="/favicons/apple-touch-icon.png" />

    <link rel="manifest" href="/favicons/site.webmanifest" />

    <link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#E7B826" />

    <meta name="msapplication-TileColor" content="#0E0E0E" />
    <meta name="theme-color" content="#0E0E0E" />

    <script is:inline define:vars={{ GA_ID, ADS_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(...args) {
        window.dataLayer.push(args);
      }    

      window.gtag = gtag;

      // Consent Mode v2 default: denied
      gtag('consent', 'default', {
        ad_storage: 'denied',
        analytics_storage: 'denied',
        ad_user_data: 'denied',
        ad_personalization: 'denied',
        wait_for_update: 500
      });

      gtag('js', new Date());

      // GA4 config: hold page_view until analytics consent is granted
      gtag('config', GA_ID, { send_page_view: false });

      // Google Ads base config (replace AW id)
      gtag('config', ADS_ID);
    </script>     
    <!-- Load Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-6W3K8F7BB1"></script>

    <!-- Page-specific head content (title/meta) -->
    <slot name="head" />
  </head>

  <body>
    <div class="site-bg" aria-hidden="true"></div>
    <Header />

    <main id="main-content">
      <slot />
    </main>

    <Footer />
    <CookieBanner/ > 

    <script>
      (function () {
        // Do not overwrite return path on thank-you page itself
        if (window.location.pathname === "/bedankt") return;
    
        const path =
          window.location.pathname +
          window.location.search +
          window.location.hash;
    
        sessionStorage.setItem("gw_return_to", path);
      })();
    </script>    
  </body>
</html>
